{{!
    @template mod_sortvoting/sort_voting_results

    Template for showing list of options to sort.

    Example context (json):
    {
        "votes": [
            {
                "id": "1",
                "avg": "1",
                "text": "A"
            },
            {
                "id": "2",
                "avg": "2",
                "text": "B"
            },
            {
                "id": "3",
                "avg": "3",
                "text": "C"
            },
            {
                "id": "4",
                "avg": "4",
                "text": "D"
            },
            {
                "id": "5",
                "avg": "5",
                "text": "E"
            }
        ]
    }
}}
<table border="1">
    <thead>
        <tr>
            <th>Average position</th>
            <th>Option</th>
        </tr>
    </thead>
    <tbody>
        {{#votes}}
            <tr>
                <td>{{avg}}</td>
                <td>{{text}}</td>
            </tr>
        {{/votes}}
    </tbody>
</table>