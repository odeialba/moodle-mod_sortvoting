{{!
    @template mod_sortvoting/sort_voting_results

    Template for showing list of options to sort.

    Example context (json):
    {
        "votes": [
            {
                "id": "1",
                "position": "1",
                "text": "A"
            },
            {
                "id": "2",
                "position": "2",
                "text": "B"
            },
            {
                "id": "3",
                "position": "2",
                "text": "C"
            },
            {
                "id": "4",
                "position": "3",
                "text": "D"
            },
            {
                "id": "5",
                "position": "4",
                "text": "E"
            }
        ]
    }
}}
<table border="1" class="m-3 table">
    <thead>
        <tr>
            <th class="w-25">{{#str}} position, mod_sortvoting {{/str}}</th>
            <th class="w-75">{{#str}} option, mod_sortvoting {{/str}}</th>
        </tr>
    </thead>
    <tbody>
        {{#votes}}
            <tr>
                <td>{{position}}</td>
                <td>{{text}}</td>
            </tr>
        {{/votes}}
    </tbody>
</table>