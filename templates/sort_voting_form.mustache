{{!
    @template mod_sortvoting/sort_voting_form

    Template for showing list of options to sort.

    Example context (json):
    {
        "sortvotingid": "1",
        "options": [
            {
                "id": "1",
                "position": "1",
                "text": "A"
            },
            {
                "id": "2",
                "position": "2",
                "text": "B"
            },
            {
                "id": "3",
                "position": "3",
                "text": "C"
            },
            {
                "id": "4",
                "position": "4",
                "text": "D"
            },
            {
                "id": "5",
                "position": "5",
                "text": "E"
            }
        ]
    }
}}
<input type="hidden" name="sortvotingid" value="{{sortvotingid}}" />
{{#options}}
    <li>
        <input type="number" name="option[]" data-optionid="{{id}}" value="{{position}}" max="{{max}}" min="1" />{{text}}
    </li>
{{/options}}

<button class="btn btn-primary" data-action="savevote" title="{{save}}">{{save}}Save</button>
{{#js}}
    require(['mod_sortvoting/sortvoting'], function(sortvoting) {
        sortvoting.init();
    });
{{/js}}